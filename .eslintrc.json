{
    "root": true,
    "parser": "@babel/eslint-parser",
    "extends": "eslint:recommended",
    "parserOptions": {
        "requireConfigFile": false
    },
    "env": {
        "node": true
    },
    "rules": {
        "eqeqeq": "warn",
        "indent": [
            "error",
            "tab"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "brace-style": "error",
        "max-len": [
            "error",
            {
                "code": 130
            }
        ],
        "semi-style": [
            "error",
            "last"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none"
            }
        ]
    }
}