{
  "name": "tbd-app-2020-backend",
  "version": "1.0.0",
  "description": "Backend for https://github.com/raegar/tbd-app-2020",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon ./index.js --exec babel-node -e js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "eslint": "^8.4.1",
    "express": "^4.17.1",
    "mongodb": "^4.2.1",
    "mongoose": "^6.1.0",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "eqeqeq": "warn",
      "indent": [
        "error",
        "tab"
      ],
      "semi": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "all"
      ],
      "brace-style": "error",
      "max-len": [
        "error",
        {
          "code": 130
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ]
    },
    "ignorePatterns": [
      "src/serviceWorker.js",
      "src/index.js",
      "src/components/**/*.test.js",
      "src/stories/*"
    ]
  }
}
